<article>
    <a href="/dashbaord"> &larr; Back to dashbaord</a>
    <h2>Edit Post</h2>

    <form class="edit-post-form">
        <div>
            <input type="text"  name="post-title" value="{{post.title}}"/>
        </div>
        <div>
            <textarea name="post-text">{{post.post_text}}</textarea>
        </div>
        <div>
            Posted on {{format_date post.created_at}}
            |
            <a href="/post/{{post.id}}">{{post.comments.length}} {{format_plural "comment" post.comments.length}} </a>
        </div>
        <button type="submit">Save Post</button>
        <button type="button" class="delete-post-btn">Create Post</button>
    </form>
</article>

<form class="comment-form">
    <div>
        <textarea name="comment-body"></textarea>
    </div>
    <div>
        <button type="submit">Add Comment</button>
    </div>
</form>
{{> comments post.comments}}

<script src="/js/edit-post.js"></script>
<script src="/js/delete-post.js"></script>
<script src="/js/comments.js"></script>